<div class="match match--<%= @n_players %>-players">
  <%= for {_id, player, name} <- @players do %>
    <div class="player">
      <div class="player__fight-zone">
        <div class="player__hp player__rotate">
          HP : <%= player.hp %> / <%= player.max_hp %>
        </div>
      </div>

      <div class="player__resources">
        <div class="player__name player__rotate"><%= name %></div>
        <div class="player__resource">
          <div class="player__rotate">PO : <%= player.gold %></div>
        </div>
        <div class="player__resource">
          <div class="player__rotate">ATK : <%= player.attack %></div>
        </div>
      </div>

      <div class="player__cards">
        <div class="player__cards-pile player__rotate">DÃ©fausse : <%= player.discard %></div>
        <div class="player__hand player__rotate">Main : <%= player.hand %></div>
        <div class="player__cards-pile player__rotate">Pioche : <%= player.deck %></div>
      </div>
    </div>
  <% end %>

  <div class="match__market"></div>

  <%= for {id, card} <- @cards do %>
    <img id="<%= id %>" class="<%= card.class %>" src="<%= card.card.image %>">
  <% end %>
</div>
